
<%- fields = [
    'debug',
    'ticket_lifetime',
    'renew_lifetime',
    'forwardable',
    'krb4_convert',
    'ignore_afs',
]
#
output = []
scope_hash = scope.to_hash
fields.each do |k|
  if scope_hash.include?(k)
    value = scope_hash[k].to_s()
    output.push("#{k} = #{value}") unless value.empty?
  end
end
-%>
    <%= @title %> = {
        <%= output.join("\n        ") %>
    }

