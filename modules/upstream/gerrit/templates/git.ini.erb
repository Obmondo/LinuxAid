<% @options.sort.map do |section, var_hash| -%>
<% if section.include? '.' -%>
<% section_arr = section.split('.') -%>
[<%= section_arr[0] %> "<%= section_arr[1] %>"]
<% else -%>
[<%= section %>]
<% end -%>
<% var_hash.sort.map do |var, val_or_arr| -%>
<% if val_or_arr.is_a? Array -%>
<% val_or_arr.each do |val| -%>
	<%= var %> = <%= val %>
<% end -%>
<% else -%>
	<%= var %> = <%= val_or_arr %>
<% end -%>
<% end -%>

<% end -%>
