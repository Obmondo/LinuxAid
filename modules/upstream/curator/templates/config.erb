---
# File managed by puppet
# Don't modify this file manually
#
# Remember, leave a key empty if there is no value.  None will be a string,
# not a Python "NoneType"
client:
  hosts:
<% Array(scope['curator::hosts']).each do |host| -%>
    - <%= host %>
<% end -%>
  port: <%= scope['curator::port'] %>
  url_prefix: <%= scope['curator::url_prefix'] %>
  use_ssl: <%= scope['curator::use_ssl'] %>
  certificate: <%= scope['curator::certificate'] %>
  client_cert: <%= scope['curator::client_cert'] %>
  client_key: <%= scope['curator::client_key'] %>
  aws_key: <%= scope['curator::aws_key'] %>
  aws_secret_key: <%= scope['curator::aws_secret_key'] %>
  aws_region: <%= scope['curator::aws_region'] %>
  ssl_no_validate: <%= scope['curator::ssl_no_validate'] %>
  http_auth: <%= scope['curator::http_auth'] %>
  timeout: <%= scope['curator::timeout'] %>
  master_only: <%= scope['curator::master_only'] %>

logging:
  loglevel: <%= scope['curator::log_level'] %>
  logfile: <%= scope['curator::logfile'] %>
  logformat: <%= scope['curator::logformat'] %>
  blacklist: [<%= Array(scope['curator::blacklist']).join(", ") %>]
