Alias /phpMyAdmin <%= @doc_path %>
Alias /phpmyadmin <%= @doc_path %>

<Directory <%= @doc_path %>/>
   <IfModule mod_authz_core.c>
     # Apache 2.4
     Require all granted
   </IfModule>
   <IfModule !mod_authz_core.c>
     # Apache 2.2
     Order Deny,Allow
     Allow from All
     Allow from ::1
   </IfModule>
</Directory>

